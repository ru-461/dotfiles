{
  "title": "EisuControl",
  "rules": [
    {
      "description": "英数キーを補助キー（Option）に設定",
      "manipulators": [
        {
          "from": {
            "key_code": "japanese_eisuu",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "japanese_eisuu"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "英数 + H / J / K / L = カーソル",
      "manipulators": [
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "英数 + A / E = 行頭・行末ジャンプ",
      "manipulators": [
        {
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "英数 + F / B = ページスクロール",
      "manipulators": [
        {
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "page_down"
            },
            {
              "key_code": "page_down",
              "modifiers": "left_option"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "page_up"
            },
            {
              "key_code": "page_up",
              "modifiers": "left_option"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "英数 + G = ページ先頭ジャンプ",
      "manipulators": [
        {
          "from": {
            "key_code": "g",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": "left_command"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "g",
            "modifiers": {
              "mandatory": ["left_option", "shift"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": "left_command"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "英数 + O = Enter",
      "manipulators": [
        {
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": "left_command"
            },
            {
              "key_code": "return_or_enter"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "英数 + Space = Enter",
      "manipulators": [
        {
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "英数 + かな = Escape",
      "manipulators": [
        {
          "from": {
            "key_code": "japanese_kana",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "英数 + U = BackSpace",
      "manipulators": [
        {
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": "left_command"
            },
            {
              "key_code": "delete_or_backspace"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
